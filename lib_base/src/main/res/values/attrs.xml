        <attr name="riv_rightBottomRadius" format="dimension|reference" />
        <attr name="riv_leftBottomRadius" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CollapsibleTextView">
        <attr name="collapsedLines" format="integer" /> <!--最大显示行数，即超过该行数的部分折叠-->
        <attr name="collapsedText" format="string" /><!--折叠时的后缀文字,eg.“展开”-->
        <attr name="expandedText" format="string" /><!--展开时的后缀文字,eg.“收起”-->
        <attr name="suffixColor" format="color" /><!--后缀文字颜色-->
    </declare-styleable>
